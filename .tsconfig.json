{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowUnreachableCode": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": "src/public/ts",
    "lib": [
      "dom", "es2015"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/public/ts/**/*.ts"
  ]
}
